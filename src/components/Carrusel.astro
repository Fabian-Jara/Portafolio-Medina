---
import Row from "./icons/Row.astro";
import RowIcon from "./icons/Row.astro";

const carruselItems = [
  {
    img: "/carrusel1.webp",
    alt: "Telecomunicaciones",
    servicio: "Servicios de",
    title: "Telecomunicaciones",
    Parrafo:
      "Mejora tu habilidad tecnológica, adapta y únete a la innovación para mantenerte relevante y competitivo en un mundo en constante cambio",
  },
  {
    img: "/carrusel2.webp",
    alt: "Edificios",
    servicio: "Telecomunicaciones para",
    title: "Edificios",
    Parrafo:
      "Mejora comunicaciones con instalaciones de telecomunicaciones y redes blandas, añadiendo seguridad de acceso, Antiincendios y Videovigilancia.",
  },
  {
    img: "/carrusel3.webp",
    alt: "Constructoras",
    servicio: "Telecomunicaciones para",
    title: "Constructoras",
    Parrafo:
      "Soluciones completas para construcción: comunicaciones, seguridad y consultoría especializada para máxima eficiencia y seguridad.",
  },
  {
    img: "/carrusel4.webp",
    alt: "Servicios Personalizados",
    servicio: "Telecomunicaciones para",
    title: "Servicios Personalizados",
    Parrafo:
      "Innova tu hogar con soluciones para proyectos pequeños: automatización, accesos inteligentes, seguridad, CCTV y portones automáticos.",
  },
];
---

<div
  id="default-carousel"
  class="relative w-full z-10"
  data-carousel="slide"
  data-carousel-interval="8000"
>
  <!-- Carousel wrapper -->
  <div class="relative h-[500px] sm:h-[750px] overflow-hidden rounded-lg">
    {
      carruselItems.map((carrusel) => (
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
          <img
            src={carrusel.img}
            class="absolute block w-full h-full object-cover top-0 left-0"
            alt={carrusel.alt}
          />
          <div class="absolute top-0 left-0 w-full h-full bg-yellow-400/10" />
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center py-4 px-4 max-w-[750px] min-w-[300px] sm:min-h-[250px] shadow-lg bg-gray-200/90 rounded-xl">
            <h1 class="flex flex-col text-3xl sm:text-[45pt] font-bold text-red-500 sm:leading-[70px]">
              <span class="sm:text-xl text-xs text-gray-950/70 pb-2">
                {carrusel.servicio}
              </span>
              <span class="font-serif">{carrusel.title}</span>
            </h1>
            <p class="text-base sm:text-xl mt-2 font-medium text-pretty py-4 text-gray-950 ">
              {carrusel.Parrafo}
            </p>
          </div>
        </div>
      ))
    }
  </div>
  <!-- Slider indicators -->
  <div
    class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse"
  >
    {
      carruselItems.map((carrusel) => (
        <button
          type="button"
          class="w-3 h-3 rounded-full"
          aria-current="false"
          aria-label="Slide"
          data-carousel-slide-to="0"
        />
      ))
    }
  </div>
  <!-- Slider controls -->
  <button
    type="button"
    class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
    data-carousel-prev
  >
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
    >
      <Row class="w-4 h-4 text-white rtl:rotate-180" />
    </span>
    <button
      type="button"
      class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none"
      data-carousel-next
    >
      <span
        class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
      >
        <Row class="w-4 h-4 text-white rotate-180" />
        <span class="sr-only">Next</span>
      </span>
    </button>
  </button>
</div>
