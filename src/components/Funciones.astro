---
import CalendarIcon from "./icons/Calendar.astro";
import SecurityIcon from "./icons/Security.astro";
import CctvIcon from "./icons/Cctv.astro";
import EdificioIcon from "./icons/Edificio.astro";
---

<div class="max-w-[1240px] mx-auto">
  <div
    class="w-full inline-flex flex-nowrap overflow-hidden
    sm:[mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]
    [mask-image:_linear-gradient(to_right,transparent_0,_black_50px,_black_calc(100%-30px),transparent_100%)]
    text-gray-100 text-center
    sm:py-12 py-8 px-6"
  >
    <ul
      class="flex items-center justify-center md:justify-start sm:[&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
    >
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <CalendarIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Administración</h1>
        <p class="sm:text-lg text-base pt-4">
          Experiencia en control y administración de grandes proyectos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <SecurityIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Seguridad</h1>
        <p class="sm:text-lg text-base pt-4">
          Instalación de sistemas de seguridad y control de accesos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <CctvIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Videovigilancia</h1>
        <p class="sm:text-lg text-base pt-4">
          Implementación de CCTV para grandes y pequeños proyectos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <EdificioIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Edificios</h1>
        <p class="sm:text-lg text-base pt-4">
          Cableado y estructurado de corrientes débiles.
        </p>
      </li>
    </ul>

    <ul
      class="flex items-center justify-center md:justify-start sm:[&_li]:mx-8 [&_li]:mx-0 [&_img]:max-w-none animate-infinite-scroll"
      aria-hidden="true"
    >
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <CalendarIcon class="sm:sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Administración</h1>
        <p class="sm:text-lg text-base pt-4">
          Experiencia en control y administración de grandes proyectos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <SecurityIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Seguridad</h1>
        <p class="sm:text-lg text-base pt-4">
          Instalación de sistemas de seguridad y control de accesos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <CctvIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Videovigilancia</h1>
        <p class="sm:text-lg text-base pt-4">
          Implementación de CCTV para grandes y pequeños proyectos.
        </p>
      </li>
      <li class="sm:min-w-[250px] min-w-[200px] px-4">
        <EdificioIcon class="sm:size-32 size-20 mx-auto" />
        <h1 class="text-2xl font-bold">Edificios</h1>
        <p class="sm:text-lg text-base pt-4">
          Cableado y estructurado de corrientes débiles.
        </p>
      </li>
    </ul>
  </div>
</div>
