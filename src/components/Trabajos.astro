---
import BotonContactanos from "../components/BotonContactanos.astro";

const trabajos = [
  {
    alt: "Trabajo de Motor para porton automtico sin carcasa",
    img: "/inicioTrabajo1.webp",
  },
  {
    alt: "Trabajo de Motor para porton automtico con carcasa",
    img: "/inicioTrabajo2.webp",
  },
  {
    alt: "Trabajo de Motor para porton automtico con carcasa vista 45º",
    img: "/inicioTrabajo3.webp",
  },
  {
    alt: "Trabajo de Motor para porton automtico con carcasa vista de poron completo",
    img: "/inicioTrabajo4.webp",
  },
  {
    alt: "Trabajo para panel electrico",
    img: "/inicioTrabajo5.webp",
  },
  {
    alt: "Trabajo para panel de alarmas de incendio",
    img: "/inicioTrabajo6.webp",
  },
];
---

<div class="max-w-[1240px] mx-auto sm:my-32 my-10 px-4">
  <h1
    class="text-center sm:text-[45pt] text-3xl font-serif font-bold sm:leading-[4rem] text-red-500 border-b-2 pb-4"
  >
    Trabajos Realizados
  </h1>
  <div class="flex flex-wrap justify-center">
    {
      trabajos.map((trabajo) => (
        <img
          src={trabajo.img}
          alt={trabajo.alt}
          class=" w-[380px] h-[300px] my-2 mx-2 rounded-xl"
        />
      ))
    }
  </div>

  <div class="flex my-8 justify-center">
    <a
      href=""
      class="rounded-xl bg-yellow-300 py-2 px-4 sm:text-xl text-base hover:bg-yellow-300/80"
    >
      <span class="sm:block hidden"
        >Todos los Trabajos y más en Nuestro Portafolio
      </span>
      <span class="sm:hidden block">Clic aqui para ver mas</span>
    </a>
  </div>
</div>
