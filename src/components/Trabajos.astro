---
import ArrowIcon from "./icons/Arrow.astro";

const trabajos = [
  {
    alt: "Trabajo de Motor para Portón Automático sin Carcasa",
    img: "/inicioTrabajo1.webp",
    titulo: "Portón Automático para Condominio",
    descripcion:
      "Se realizo el trabajo de instalación para un portón automático en condominio de las Condes.",
  },
  {
    alt: "Instalación de Panel Eléctrico para Empresa",
    img: "/inicioTrabajo5.webp",
    titulo: "Instalación de Panel Eléctrico para Empresa",
    descripcion:
      "Instalación completa de panel eléctrico para empresa en el trabajo de instalaciones de Estación Central.",
  },
  {
    alt: "Trabajo para Panel de Alarmas de Incendio",
    img: "/inicioTrabajo6.webp",
    titulo: "Trabajo para Panel de Alarmas de Incendio",
    descripcion:
      "Configuración de panel de alarmas de incendio para las sucursales de bodegas Montserrat.",
  },
];
---

<div class="max-w-[1240px] mx-auto sm:my-32 my-10 px-4">
  <div class="flex flex-col items-center py-4">
    <h1
      class="text-center sm:text-[45pt] text-3xl font-bold sm:leading-[4rem] text-red-500 pb-4"
    >
      Últimos Trabajos
    </h1>
    <hr class="sm:border-4 border-2 rounded-3xl w-32 border-red-500" />
  </div>

  <div class="flex flex-wrap justify-between">
    {
      trabajos.map((trabajo) => (
        <>
          <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow mt-8">
            <a href="#" class="group block">
              <img
                class="rounded-t-lg h-[300px]"
                src={trabajo.img}
                alt={trabajo.alt}
              />
            </a>
            <div class="p-5">
              <a href="#">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                  {trabajo.titulo}
                </h5>
              </a>
              <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                {trabajo.descripcion}
              </p>
              <a
                href="#"
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-500 rounded-lg hover:bg-red-400 focus:ring-4 focus:outline-none focus:ring-red-300"
              >
                Saber más
                <ArrowIcon class="rotate-180 w-3.5 h-3.5 ms-2" />
              </a>
            </div>
          </div>
        </>
      ))
    }
  </div>

  <div class="flex my-8 justify-center">
    <a
      href=""
      class="rounded-xl bg-yellow-300 py-2 px-4 sm:text-xl text-base hover:bg-yellow-300/80 focus:outline-none focus:ring-red-300"
    >
      <span class=""> Ver más Proyectos </span>
    </a>
  </div>
</div>
